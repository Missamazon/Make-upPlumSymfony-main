{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}
    <div class="card text-center">
        <h1>{{ product.name }}</h1>
        <div class="center">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class= "img-fluid">
        </div>
        <div class="text-center">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ (product.price/100)|number_format(2, ',', '.') }}</span>
            <hr>
            <p> {{ product.description }} </p>
            <a href="{{ path('add_to_cart', { 'id' : product.id }) }}" class="btn btn-light"> Ajouter au panier </a>
        </div>
    </div>
{% endblock %}
